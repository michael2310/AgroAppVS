<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgroApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgroApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgroApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      @if (User.Identity.IsAuthenticated){
                      <li class="nav-item zoom">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Panel Główny</a>
                      </li>
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Farm" asp-action="Index">Gospodarstwa</a>
                                </li>
                            }else if (User.IsInRole("Farmer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Farm" asp-action="Details">Gospodarstwa</a>
                                </li>
                            }

                       <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Field" asp-action="Index">Ewidencja</a>
                       </li>
                       <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Pracownicy</a>
                       </li>
                      <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Machine" asp-action="Index">Maszyny</a>
                       </li>
                       
                         <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Użytkownicy</a>
                       </li>
                       
                      <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a>
                       </li>
                       <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="Index">Zadania</a>
                       </li>
                       }
                       
                    </ul>
                </div>
                <div class="col-md-3 text-end"">
                    @if(User.Identity.IsAuthenticated){
                    <span>@User.Identity.Name</span>
                    <input type="button" class="btn btn-outline-primary btn-sm m-0" value="Wyloguj" onclick="location.href='@Url.Action("LogOut", "Account", new {  id=ViewBag.UserId  })'" />
                    }else{
                    <input type="button" class="btn btn-outline-primary btn-sm m-0" value="Zaloguj" onclick="location.href='@Url.Action("Login", "Account", new {  id=ViewBag.UserId  })'" />
                    }
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AgroApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
