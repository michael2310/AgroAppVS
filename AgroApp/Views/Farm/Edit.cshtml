@model AgroApp.Models.FarmModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FarmModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FarmId" />
            <div class="form-group">
                <label asp-for="FarmName" class="control-label"></label>
                <input asp-for="FarmName" class="form-control" />
                <span asp-validation-for="FarmName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FarmStatus" /> @Html.DisplayNameFor(model => model.FarmStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FarmOwnerId" class="control-label"></label>
                <select asp-for="FarmOwnerId" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="FarmOwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

