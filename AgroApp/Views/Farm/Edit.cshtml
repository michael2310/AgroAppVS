@model AgroApp.Models.FarmModel

@{
    ViewData["Title"] = "Edit";
}
h1>Edycja</h1>


<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
            <h4>Edytuj działkę</h4>
            <hr />
            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FarmId" />
                    <div class="form-group mb-3">
                        <label asp-for="FarmName" class="control-label"></label>
                        <input asp-for="FarmName" class="form-control" />
                        <span asp-validation-for="FarmName" class="text-danger"></span>
                    </div>
                     <div class="form-group mb-3">
                        <label asp-for="FarmOwnerId" class="control-label"></label>
                        <select asp-for="FarmOwnerId" class="form-control" asp-items="ViewBag.Users"></select>
                        
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="FarmStatus" /> @Html.DisplayNameFor(model => model.FarmStatus)
                        </label>
                    </div>
                    <div class="form-group d-grid">
                        <input type="submit" value="Zapisz" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
     <input type="button" class="btn btn-primary" value="Powrót" onclick="location.href='@Url.Action("Index", "Farm")'" />
</div>

