@model AgroApp.Models.FarmModel

@{
    ViewData["Title"] = "Details";
}

<h1>Informacje o gospodarstwie</h1>

<div class="col-sm col-md col-lg mx-auto">
    <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
            <div>
                <div class ="col-sm-2 col-sm-10 fw-bold">@Html.DisplayFor(model => model.FarmName)</div>
                <hr />
                <dl class="row">
       
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FarmStatus)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FarmStatus)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayName("Ilość działek")
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.TextBox("fields", (string)@ViewBag.FieldCount, new{@readonly = true})
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayName("Łączna powierzchnia")
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.TextBox("area", (string)@ViewBag.AreaCount, new{@readonly = true})
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FarmOwner.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FarmOwner.Name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FarmOwner.Surname)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FarmOwner.Surname)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>


<div>
    <input type="button" class="btn btn-primary btn-sm m-0" value="Edycja" onclick="location.href='@Url.Action("Edit", "Farm", new{id = @Model?.FarmId})'" />
    <input type="button" class="btn btn-primary btn-sm m-0" value="Powrót do listy" onclick="location.href='@Url.Action("Index", "Farm")'" />
</div>
