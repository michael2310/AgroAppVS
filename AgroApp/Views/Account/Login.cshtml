@model AgroApp.Models.LoginModel

<div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
                <div class="text-center">
                    <img src="~/agroapp_black_logo.png" class="card-img"/>
                </div>
                <h5 class="card-title text-center mb-5 fw-light fs-5">Logowanie</h5>
                <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class=" mb-3">
                            
                            <input asp-for="Login" class="form-control" placeholder="Login" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            
                            <input asp-for="Password"  class="form-control" placeholder="Hasło" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <input type="submit" value="Zaloguj" class="btn btn-primary fw-bold" />
                        </div>
                </form>
             </div>
          </div>
     </div>
</div>