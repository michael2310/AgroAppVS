@model IEnumerable<UserModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Register" class="btn btn-secondary">Create a User</a>
 
<table class="table table-sm table-bordered">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Login</th>
        <th>Email</th>
        <th>Position</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (UserModel user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Position</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">
                    Update
                </a>
                <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

