@model IEnumerable<AgroApp.Models.TaskModel>

@{
    ViewData["Title"] = "IndexEmployee";
}

<h1>Zadania</h1>



<div class="card border-0 shadow rounded-3 my-5">
    <div class="card-body p-4 p-sm-5">
        <h2>Aktywne zadania</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpectedEndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dateTime)
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                    if (item.IsDone == false)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpectedEndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateTime)
                            </td>
                            <td>
                            <td>
                                <input type="button" class="btn btn-primary btn-sm m-0" value="Szczegóły" onclick="location.href='@Url.Action("Details", "Task", new {  id=item.TaskId  })'" />
                                <input type="button" class="btn btn-warning btn-sm m-0" value="Edytuj" onclick="location.href='@Url.Action("Edit", "Task", new {  id=item.TaskId  })'" />
                            </td>
                        </tr>
                    }
            }
            </tbody>
        </table>
    </div>
</div>

<div class="card border-0 shadow rounded-3 my-5">
    <div class="card-body p-4 p-sm-5">
        <h2>Ukończone zadania</h2>
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpectedEndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dateTime)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.IsDone == true)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpectedEndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateTime)
                            </td>
                            <td>
                                <input type="button" class="btn btn-primary btn-sm m-0" value="Szczegóły" onclick="location.href='@Url.Action("Details", "Task", new {  id=item.TaskId  })'" />
                                <input type="button" class="btn btn-warning btn-sm m-0" value="Edytuj" onclick="location.href='@Url.Action("Edit", "Task", new {  id=item.TaskId  })'" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
