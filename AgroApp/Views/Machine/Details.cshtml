@model AgroApp.Models.MachineModel

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>




<div class="card border-0 shadow rounded-3 my-5">
    <div class="card-body p-4 p-sm-5">
        <h4>Szczegóły maszyny</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ProductionYear)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ProductionYear)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LastService)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LastService)
            </dd>
        </dl>
    </div>
</div>

<div class="card border-0 shadow rounded-3 my-5">
    <div class="card-body p-4 p-sm-5">
        <h1>Przeglądy</h1>
        <input type="button" class="btn btn-primary btn-sm m-0" value="Dodaj przegląd" onclick="location.href='@Url.Action("Create", "MachineService", new {  id=ViewBag.MachineId  })'" />
        <table class="table table-striped">
            <thead>                 
                <tr>
                    <th>Data przeglądu</th>
                    <th>Informacje</th>
                    <th></th>
                </tr>
            </thead>

                @foreach (var item in Model.Services)
                {

                    <tr>
                        <td class="align-middle">@Html.DisplayFor(m => item.ServiceDate)</td>
                    <td class="align-middle">@Html.DisplayFor(m => item.ServiceInfo)</td>
                    <td class="">
                        <input type="button" class="btn btn-primary btn-sm m-0" value="Szczegóły" onclick="location.href='@Url.Action("Details", "MachineService", new {  id=item.ServiceId  })'" />
                        <input type="button" class="btn btn-warning btn-sm m-0" value="Edytuj" onclick="location.href='@Url.Action("Edit", "MachineService", new {  id=item.ServiceId  })'" />
                        <input type="button" class="btn btn-danger btn-sm m-0" value="Usuń" onclick="location.href='@Url.Action("Delete", "MachineService", new {  id=item.ServiceId  })'" />
                    </td>
                </tr>
                }
            
        </table>
    </div>
</div>
<div>
    <input type="button" class="btn btn-primary btn-sm m-0" value="Edycja" onclick="location.href='@Url.Action("Edit", "Machine", new{id = @Model?.MachineId})'" />
    <input type="button" class="btn btn-primary btn-sm m-0" value="Powrót do listy" onclick="location.href='@Url.Action("Index", "Machine")'" />
</div>
