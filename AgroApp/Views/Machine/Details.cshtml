@model AgroApp.Models.MachineModel

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>




<div class="col-sm col-md col-lg mx-auto">
    <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
            <div>
                <h4>Szczegóły maszyny</h4>
                <hr />
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Brand)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Brand)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Model)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Model)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.ProductionYear)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.ProductionYear)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.LastService)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.LastService)
                    </dd>
                     <dt class = "">
                        @Html.DisplayNameFor(model => model.NextService)
                    </dt>
                    <dd class = "">
                        @Html.DisplayFor(model => model.NextService)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<div>
    <input type="button" class="btn btn-primary btn-sm m-0" value="Edycja" onclick="location.href='@Url.Action("Edit", "Machine", new{id = @Model?.MachineId})'" />
    <input type="button" class="btn btn-primary btn-sm m-0" value="Powrót do listy" onclick="location.href='@Url.Action("Index", "Machine")'" />
</div>
